# TUDAO Node Pass - Environment Configuration
# Copy this file to .env and fill in your values

# ====================
# Network Configuration
# ====================
# Chain ID: 84532 = Base Sepolia (test), 8453 = Base (mainnet)
VITE_CHAIN_ID=84532
VITE_NETWORK_NAME=base-sepolia

# ====================
# Feature Flags
# ====================
# Disable card on-ramp in test mode
VITE_DISABLE_CARD_ONRAMP=true
# Disable email receipts until ready
VITE_EMAIL_DISABLED=true

# ====================
# Tier Pricing (USD)
# ====================
VITE_TIER_VERIFIER_PRICE_USD=500
VITE_TIER_PROFESSIONAL_PRICE_USD=5000
VITE_TIER_FOUNDER_PRICE_USD=10000

# ====================
# Inventory Caps
# ====================
VITE_INVENTORY_CAP_VERIFIER=0
VITE_INVENTORY_CAP_PROFESSIONAL=0
VITE_INVENTORY_CAP_FOUNDER=300

# ====================
# Compliance Text
# ====================
VITE_FOUNDER_NON_TRANSFERABLE_NOTE="Founder nodes are non-transferable until an MVP unlock vote."

# ====================
# Thirdweb (NFT Minting)
# ====================
VITE_THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here
# Contract addresses for each tier (Base Sepolia for testing)
VITE_CONTRACT_VERIFIER=0x...
VITE_CONTRACT_PROFESSIONAL=0x...
VITE_CONTRACT_FOUNDER=0x...

# ====================
# Supabase (Database)
# ====================
VITE_SUPABASE_URL=https://xxxxx.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# ====================
# On-ramp Provider (Mainnet only)
# ====================
VITE_ONRAMP_PROVIDER=coinbase_onramp
VITE_ONRAMP_API_KEY=your_onramp_api_key

# ====================
# Email (Optional)
# ====================
VITE_EMAIL_PROVIDER=resend
EMAIL_API_KEY=your_email_api_key
VITE_SUPPORT_EMAIL=support@tradeuniondao.com
VITE_EMAIL_FROM_NAME=TUDAO Receipts

# ====================
# Asset URLs (S3/CloudFront)
# ====================
VITE_ASSETS_BADGE_VERIFIER_URL=https://cdn.example.com/badges/verifier.png
VITE_ASSETS_BADGE_PROFESSIONAL_URL=https://cdn.example.com/badges/professional.png
VITE_ASSETS_BADGE_FOUNDER_URL=https://cdn.example.com/badges/founder.png
VITE_ASSETS_SETUP_PDF_URL=https://cdn.example.com/setup-guide.pdf
